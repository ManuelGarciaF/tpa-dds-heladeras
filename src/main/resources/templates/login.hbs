{{#partial "contenido"}}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg">
                <div class="container mx-auto my-auto p-4">
                    <h1 class="text-center pb-2">INICIA SESIÓN</h1>
                    <p class="text-center">Alimentando Esperanzas, Compartiendo Sonrisas</p>

                    <form action="/login" method="post">
                        <label for="usuario" class="form-label">Usuario</label>
                        <input id="usuario" type="text" class="form-control mb-2" placeholder="Ingresa tu usuario">
                        <label for="password" class="form-label">Contraseña</label>
                        <input id="password" type="password" class="form-control mb-2" required minlength="4" placeholder="********">
                        <button type="submit" class="btn btn-primary ">Iniciar Sesión</button>
                    </form>
                </div>
            </div>
            <div class="col-lg d-flex flex-column align-items-end pe-0">
                <img src="/assets/img/login.png" alt="Imagen de heladera"
                     class="img-fluid vh-100">
            </div>
        </div>
    </div>
{{/partial}}

{{>templates/layout}}