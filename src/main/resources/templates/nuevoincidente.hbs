{{#>templates/partials/layout}}
  {{>templates/partials/nav}}
  <div class="container-lg vstack mt-3">
    <h3 class="h3 text-center my-3">
      REPORTAR FALLA TÉCNICA
    </h3>
    <div class="container-lg content-container border border-3 rounded-4 bg-body p-3 mt-5">
      <form action="/heladeras/{{id}}/incidentes" method="post" enctype="multipart/form-data" class="vstack p-4">
        <div class="mb-2">
          <label for="descripcion" class="form-label fw-medium">Descripción de la falla *</label>
          <textarea id="descripcion" name="descripcion" class="form-control" style="height: 10em"
                    minlength="10" required></textarea>
        </div>
        <div class="mb-2">
          <label for="img" class="form-label fw-medium">Imagen de la falla</label>
          <input type="file" name="img" id="img" class="form-control" accept="image/*">
        </div>
        <button type="submit" class="btn btn-primary align-self-md-end mt-2">Enviar Reporte</button>
      </form>
    </div>
  </div>
{{/templates/partials/layout}}